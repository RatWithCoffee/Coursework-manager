<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="coursework_manager.controllers.groups.GroupListController">
    <!-- Указываем spacing и padding в правильном формате -->
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <spacing>10</spacing>

    <Label text="Список групп" style="-fx-font-size: 18; -fx-font-weight: bold;" />

    <ListView fx:id="groupListView" prefHeight="200" />

    <HBox>
        <Button text="К списку преподавателей" onAction="#handleGoToTeachers" />
    </HBox>
</VBox>