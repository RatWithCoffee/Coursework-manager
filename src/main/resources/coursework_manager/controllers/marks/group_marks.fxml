<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="coursework_manager.controllers.MarksController">
    <top>
        <ToolBar>
            <!-- Выбор группы -->
            <Label text="Группа:"/>
            <ComboBox fx:id="groupComboBox" promptText="Выберите группу" onAction="#handleGroupSelect"/>

            <!-- Выбор курсовой работы -->
            <Label text="Курсовая работа:"/>
            <ComboBox fx:id="courseworkComboBox" promptText="Выберите курсовую работу" onAction="#handleCourseworkSelect"/>
        </ToolBar>
    </top>

    <center>
        <TableView fx:id="marksTable">
            <columns>
                <!-- Студент -->
                <TableColumn fx:id="studentColumn" text="Студент" prefWidth="200">
                    <cellValueFactory>
                        <PropertyValueFactory property="studentName"/>
                    </cellValueFactory>
                </TableColumn>

                <!-- Оценка -->
                <TableColumn fx:id="markColumn" text="Оценка" prefWidth="100">
                    <cellValueFactory>
                        <PropertyValueFactory property="mark"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </center>
</BorderPane>